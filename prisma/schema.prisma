generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coffee {
  id          String   @id @default(uuid())
  name        String
  roaster     String
  type        String
  roastLevel  String
  bitterness  String
  acidity     String
  origin      Json
  processing  String
  description String
  price       Int
  url         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User[]
  purchaseEvent PurchaseEvent[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wishlist  Coffee[] 

  purchaseEvent PurchaseEvent[]
}

model PurchaseEvent {
  id        String   @id @default(uuid())
  userId    String
  coffeeId  String
  user User @relation(fields: [userId], references: [id])
  coffee Coffee @relation(fields: [coffeeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}